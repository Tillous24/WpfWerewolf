<Window x:Class="WpfWerewolf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Werewolf Companion" SizeToContent="Width">
    <Grid Background="#FF212121">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Library" Foreground="White" FontSize="20" Margin="5"/>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            <Button Content="New Game" Foreground="White" FontSize="20" Margin="5" Click="NewGame_Click"/>
            <Image Source="/Image/Werewolf.png" Width="150" Height="200" Margin="0,10" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
