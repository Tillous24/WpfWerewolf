<Window x:Class="WpfWerewolf.Presentation_Layer.Presenters.NightActions.WitchAction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWerewolf.Presentation_Layer.Presenters.NightActions"
        mc:Ignorable="d"
        Title="WitchAction" Height="450" Width="800"
        Background="#A9CAF7">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,56,0,0" Height="352" Width="338">
            <Label HorizontalAlignment="Center" FontSize="24" FontWeight="Semibold" Content="It's The Witches turn."/>
            <Image Source="/Image/witch.png" Width="150"/>
            <WrapPanel x:Name="HealWrapPanel" Orientation="Horizontal" Margin="10 20"/>
            <Button x:Name="HealButton" Content="Heal Potion" Width="78" Click="HealButton_Click"/>
            <Button x:Name="KillButton" Content="Death Potion" Width="78" Click="KillButton_Click"/>
            <WrapPanel x:Name="KillWrapPanel" Orientation="Horizontal" Margin="10 20"/>
        </StackPanel>
    </Grid>
</Window>
